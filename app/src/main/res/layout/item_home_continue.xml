<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
       <variable
           name="continueData"
           type="com.yjooooo.watcharoid.ui.home.model.ContinueData" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp">

        <ImageView
            android:id="@+id/iv_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            setSrc="@{continueData.imgId}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/card_small"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/ib_continue_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="61dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/iv_continue"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="@+id/iv_continue"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/btn_play_android_3"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tv_continue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{continueData.title}"
            android:textColor="@color/watcha_lightgray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_continue" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>